# nginx application vhost
#
# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.
#

upstream app_server {
<%- if @socket %>
    server unix:<%= @socket %> fail_timeout=0;
<%- else %>
    server localhost:<%= @port %> fail_timeout=0;
<%- end %>
}

server {
    listen 80;
    server_name _;
    keepalive_timeout 5;

    root <%= @public_path %>;

    try_files $uri/index.html $uri.html $uri @app;

    location @app {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://app_server;
    }

    error_page 500 502 503 504 /500.html;

    location = /500.html {
        root <%= @public_path %>;
    }

    error_log         <%= node['nginx']['log_dir'] %>/iamplus-error.log;
    access_log        <%= node['nginx']['log_dir'] %>/iamplus-access.log;
}
